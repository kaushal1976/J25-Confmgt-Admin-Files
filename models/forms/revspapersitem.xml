<?xml version="1.0" encoding="utf-8"?>


<form>

	<fieldset name="reviewersforpapersitem.form" addfieldpath="/administrator/components/com_confmgt/models/fields">

		<field name="paper"
				label="CONFMGT_FIELD_PAPER_ID"
				alias="_paper_title"
				filter="INT"
				required="true"
				class="validate[required]"
				listKey="id"
				labelKey="title"
				type="ckcombo"
				nullLabel="CONFMGT_JSEARCH_SELECT_PAPER_ID"/>

		<field name="reviewer"
				label="CONFMGT_FIELD_REVIEWERS_NAME"
				alias="_reviewer_surname"
				filter="INT"
				required="true"
				class="validate[required]"
				listKey="id"
				labelKey="surname"
				type="ckcombo"
				nullLabel="CONFMGT_JSEARCH_SELECT_REVIEWERS_NAME"/>
	</fieldset>

	<fieldset name="default.filters" addfieldpath="/administrator/components/com_confmgt/models/fields">

		<field name="search_search_1"
				listKey="id"
				labelKey="title"
				type="cksearch"
				placeholder="CONFMGT_FILTER_NULL_PAPER_TITLE_USER_NAME_PAPER_KEY_WORDS_REVIEWER_FIRST_NAME_REVIEWER_SURNAME_REVIEWER_EMAIL"
				label="CONFMGT_JSEARCH_PAPER_TITLE_USER_NAME_PAPER_KEY_WORDS_REVIEWER_FIRST_NAME_REVIEWER_SURNAME_REVIEWER_EMAIL"
				class="element-search search-query"/>

		<field name="sortTable"
				type="cksort"
				responsive="hidden-phone"
				nullLabel="JGLOBAL_SORT_BY"
				label="JGLOBAL_SORT_BY"
				class="element-filter"/>

		<field name="directionTable"
				type="ckdirection"
				responsive="hidden-phone"
				nullLabel="JFIELD_ORDERING_DESC"
				label="JFIELD_ORDERING_DESC"
				class="element-filter"/>

		<field name="limit"
				type="cklimit"
				submit="true"
				label="JFIELD_PLG_SEARCH_SEARCHLIMIT_DESC"
				class="element-filter"/>
	</fieldset>

	<fieldset name="modal.filters" addfieldpath="/administrator/components/com_confmgt/models/fields">

		<field name="search_search_2"
				listKey="id"
				labelKey="title"
				type="cksearch"
				placeholder="CONFMGT_FILTER_NULL_PAPER_TITLE_USER_NAME_PAPER_KEY_WORDS_REVIEWER_FIRST_NAME_REVIEWER_SURNAME_REVIEWER_EMAIL"
				label="CONFMGT_JSEARCH_PAPER_TITLE_USER_NAME_PAPER_KEY_WORDS_REVIEWER_FIRST_NAME_REVIEWER_SURNAME_REVIEWER_EMAIL"
				class="element-search search-query"/>

		<field name="limit"
				type="cklimit"
				submit="true"
				label="JFIELD_PLG_SEARCH_SEARCHLIMIT_DESC"
				class="element-filter"/>
	</fieldset>
</form>